<script>
document.getElementById("predictionForm").addEventListener("submit", function(e) {
    e.preventDefault();

    let customers = parseInt(document.getElementById("customers").value);
    let temperature = parseInt(document.getElementById("temperature").value) || 25;
    let holiday = parseInt(document.getElementById("holiday").value);
    let promotion = parseInt(document.getElementById("promotion").value);

    // Simple Revenue Formula (Demo AI Logic)
    let baseRevenue = customers * 20;  
    let weatherImpact = temperature > 30 ? -200 : 100;
    let holidayImpact = holiday ? 500 : 0;
    let promoImpact = promotion ? 700 : 0;

    let totalRevenue = baseRevenue + weatherImpact + holidayImpact + promoImpact;

    document.getElementById("revenueResult").innerText = "$ " + totalRevenue.toLocaleString();
    document.getElementById("resultCard").style.display = "block";
});
</script>

